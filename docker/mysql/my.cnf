[mysqld]
# --- Límites de Memoria ---
# El pool de buffer es lo que más consume. 128MB es perfecto para desarrollo.
innodb_buffer_pool_size = 128M
innodb_log_buffer_size = 8M
innodb_file_per_table = 1
innodb_stats_on_metadata = 0

# --- Conexiones ---
max_connections = 50
max_allowed_packet = 64M
thread_cache_size = 8

# --- Caché de Tablas ---
table_open_cache = 400
sort_buffer_size = 1M
read_buffer_size = 1M

# --- Seguridad y Red ---
bind-address = 0.0.0.0
skip-name-resolve