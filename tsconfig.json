{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler", // o "node16" / "nodenext"
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    },
    "types": ["vite/client", "node", "vite-plugin-pwa/client"]
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "./vendor/tightenco/ziggy/**/*.js",
    "resources/js/echo.js"
, "resources/js/Composables/useContentValidation.ts", "resources/js/Composables/usePublishPreview.js", "tests/Javascript/Utils/emptyStateMapper.test.ts", "tests/Javascript/Hooks/useOptimistic.test.ts", "tests/Javascript/Utils/errorLogger.test.ts", "tests/Javascript/Utils/cacheLogger.test.ts", "tests/Javascript/Utils/performanceMetrics.test.ts"  ],
  "exclude": ["node_modules"]
}
